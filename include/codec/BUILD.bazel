generate_cpp_files_for_headers(
    name = "headers_to_compile",
    headers = CORE_HDRS +
              ANY_CODEC_HDRS +
              ANDROID_PUBLIC_HDRS +
              BMP_PUBLIC_HDRS +
              GIF_PUBLIC_HDRS +
              ICO_PUBLIC_HDRS +
              JPEG_PUBLIC_HDRS +
              JPEGXL_PUBLIC_HDRS +
              PNG_PUBLIC_HDRS +
