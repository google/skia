    name = "any_codec_hdrs",
    srcs = ANY_CODEC_HDRS,
    visibility = ["//src/codec:__pkg__"],
)

ANDROID_PUBLIC_HDRS = ["SkAndroidCodec.h"]

skia_filegroup(
    name = "android_public_hdrs",
    srcs = ANDROID_PUBLIC_HDRS,
    visibility = ["//src/codec:__pkg__"],
)

BMP_PUBLIC_HDRS = ["SkBmpDecoder.h"]

skia_filegroup(
    name = "bmp_public_hdrs",
    srcs = BMP_PUBLIC_HDRS,
    visibility = ["//src/codec:__pkg__"],
)

