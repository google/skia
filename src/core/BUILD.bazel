        "//src/utils:core_srcs",
    ] + select({
        ":load_sksl_from_disk_true": ["//src/sksl:sksl_skslc_module_srcs"],
        ":load_sksl_from_disk_false": ["//src/sksl:sksl_default_module_srcs"],
